{
  "manifest_version": 3,
  "name": "Tab Groups Manager",
  "version": "1.0",
  "description": "View and manage all your tab groups in one place",
  "permissions": [
    "tabs",
    "tabGroups"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Tab Groups Manager"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}